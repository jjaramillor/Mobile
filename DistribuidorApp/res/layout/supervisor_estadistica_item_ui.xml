<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#888888"
        android:paddingLeft="5dp" >

        <TextView
            android:id="@+id/txtNro"
            style="@style/grillaItem"
            android:layout_width="20dp"           
            android:text=""/>

        <TextView
            android:id="@+id/txtCodMotivo"           
            style="@style/grillaItem" 
            android:width="80dp"
            android:layout_toRightOf="@+id/txtNro"
            android:text="" />

        <TextView
            android:id="@+id/txtMotivo"
            style="@style/grillaItem"
            android:width="170dp"
             android:layout_toRightOf="@+id/txtCodMotivo"         
            android:text="" />

        <TextView
            android:id="@+id/txtCantidad"
            style="@style/grillaItem"
            android:width="50dp"    
            android:layout_toRightOf="@+id/txtMotivo"
            android:text=""/>

    </RelativeLayout>

</LinearLayout>
