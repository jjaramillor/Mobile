<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_main"
        android:orientation="horizontal" >
        
          <ImageView
            android:id="@+id/imvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:src="@drawable/home_white" />
          
    </RelativeLayout>

    <RelativeLayout       
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/bar_bg"
        android:orientation="horizontal" >

		<ImageView
		    android:id="@+id/imbAtras"
		     android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:scaleType="center"		    
		    android:src="@drawable/item_back" />
        
		<TextView
		    android:id="@+id/txtDescripcion"
		    style="@style/TituloHeader"		    
		    android:layout_marginLeft="10dp"
		    android:layout_toRightOf="@+id/imbAtras"
		    android:text="LIQUIDAR" />
		
	</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imvLiquidarTotal"
                style="@style/LiquidarIcono"
                android:src="@drawable/liquidar_todo" />

            <TextView
                android:id="@+id/textDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imvLiquidarTotal"
                android:layout_centerHorizontal="true"
                android:text="ENTREGADO TOTAL"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#009E0F" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imvLiquidarParcial"
                style="@style/LiquidarIcono"
                android:src="@drawable/liquidar_parcial" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imvLiquidarParcial"
                android:layout_centerHorizontal="true"
                android:text="ENTREGADO PARCIAL"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF9400" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imvLiquidarNoEntregado"
                style="@style/LiquidarIcono"
                android:src="@drawable/liquidar_noentregado" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imvLiquidarNoEntregado"
                android:layout_centerHorizontal="true"
                android:text="NO ENTREGADO"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF0000" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
