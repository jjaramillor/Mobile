<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBotones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_main"
        android:orientation="horizontal" >
        
          <ImageView
            android:id="@+id/imvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:src="@drawable/home_white" />
          
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/bar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imbAtras"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/item_back" />

        <TextView
            android:id="@+id/txtDescripcion"
            style="@style/TituloHeader"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imbAtras"
            android:text="LIQUIDAR" />
    </RelativeLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/glMotivos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.68" >

    </android.support.v7.widget.GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center|center_horizontal|center_vertical" >

        <Spinner
            android:id="@+id/ddlMotivos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnLiquidarNoEntregado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ddlMotivos"
            android:layout_centerInParent="true"
            android:text="Liquidar" />

    </RelativeLayout>

</LinearLayout>