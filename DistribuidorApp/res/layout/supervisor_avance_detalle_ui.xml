<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="app.main.cl_supervisor_avance_detalle" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_main"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:src="@drawable/home_white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/bar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imbAtras"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/item_back" />

        <TextView
            style="@style/TituloHeader"
            android:layout_toRightOf="@+id/imbAtras"
            android:text="Avances" />
    </RelativeLayout>

  
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
		<!-- Header -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bar_bg" >

            <TextView
                style="@style/grillaHeader"
                android:text="Transportista"
                android:width="170dip" />

            <TextView
                style="@style/grillaHeader"
                android:text="Planeado"
                android:width="80dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="Efectuado"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="HR"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="Documento"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="Pedido"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="Cliente"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="Destinatario"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="FlgLiquida"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="Partida"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="Llegada"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="Descargo"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="Liquidado"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="CodMotivo"
                android:width="50dp" />

            <TextView
                style="@style/grillaHeader"
                android:text="Motivo"
                android:width="50dp" />

            

          </LinearLayout>

              	</HorizontalScrollView>

    

            <!-- List Divider -->
            <!--  
            	<View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="?android:attr/listDivider" />
			-->
            <ListView
                android:id="@+id/lstGridAvance1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical|horizontal" >

            </ListView>

</LinearLayout>